
<%= error_messages_for :person %>

<% form_for(@person) do |f| %>
  <p>
    <b>First name</b><br />
    <%= f.text_field :first_name %>
  </p>

  <p>
    <b>Last name</b><br />
    <%= f.text_field :last_name %>
  </p>

  <p>
    <b>Telephone</b><br />
    <%= f.text_field :telephone %>
  </p>

  <p>
    <b>Email</b><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <b>Addr addr</b><br />
    <%= f.text_area :addr_addr %>
  </p>

  <p>
    <b>Addr extended</b><br />
    <%= f.text_area :addr_extended %>
  </p>

  <p>
    <b>Addr street</b><br />
    <%= f.text_area :addr_street %>
  </p>

  <p>
    <b>Addr city</b><br />
    <%= f.text_field :addr_city %>
  </p>

  <p>
    <b>Addr region</b><br />
    <%= f.text_field :addr_region %>
  </p>

  <p>
    <b>Addr country</b><br />
    <%= f.text_field :addr_country %>
  </p>

  <p>
    <b>Photo</b><br />
    <%= f.text_field :photo %>
  </p>

  <p>
    <b>Role</b><br />
    <%= f.text_field :role %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

